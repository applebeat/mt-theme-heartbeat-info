<mt:EntryAssets><mt:SetVar name="hasAsset" value="1"></mt:EntryAssets>
<mt:If name="hasAsset">
<div class="gallery widget">
<h3>Gallery│ギャラリー</h3>
<div class="galleryicon">
<mt:EntryAssets sort_order="ascend" sort_by="file_name">
<a href="<$mt:AssetURL$>" data-lightbox="lightbox" title="<$mt:AssetDescription$>"><img src="<$mt:AssetThumbnailURL width="60" square="1"$>"></a>
</mt:EntryAssets>
</div><!-- /galleryicon -->
</div><!-- /gallery -->
</mt:If>