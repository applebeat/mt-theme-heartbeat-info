<mt:BlogID setvar="blog_id">
<mt:Tags include_blogs="$blog_id">
<mt:if name="__first__">
  <div id="tags" class="tagcloudwrapper widget">
  <h3>Tag Cloud│タグクラウド</h3>
  <div class="tagcloud">
  <ul>
</mt:if>
<li class="rank-<$mt:TagRank max="10"$>"><a href="javascript:void(0)" onclick="location.href='<$mt:TagSearchLink include_blogs="$blog_id" encode_js="1"$>';return false;" rel="tag"><$mt:TagName$></a></li>
<mt:if name="__last__">
  </ul>
  </div>
  </div>
</mt:if>
</mt:Tags>